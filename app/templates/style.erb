<%

var round = Math.round, ceil = Math.ceil;

%>

/* reset.css */

* {
    margin:0;padding:0;border:0;
}

body, div, span, object, iframe, h1, h2, h3, h4, h5, h6, p, blockquote, pre, a, abbr, acronym, address, code, del, dfn, em, img, q, dl, dt, dd, ol, ul, li, fieldset, form, label, legend, table, caption, tbody, tfoot, thead, tr, th, td, article, aside, dialog, figure, footer, header, hgroup, nav, section {
    vertical-align:baseline;
}

article, aside, dialog, figure, footer, header, hgroup, nav, section {
    font-weight:inherit;font-style:inherit;font-size:100%;font-family:inherit;display:block;
}

body {
    line-height: <%= gheight - 1 %>px;background:white;
}

table {
    border-collapse:collapse;border-spacing:0;
}

caption, th, td {
    text-align:left;font-weight:normal;float:none !important;
}

table, th, td {
    vertical-align:middle;
}

blockquote:before, blockquote:after, q:before, q:after {
    content:'';
}

blockquote, q {
    quotes:"" "";
}

a img {
    border:none;
}

:focus {
    outline:0;
}


/* styles.css */

body {
    background-color: black;
    color: black;
    overflow: hidden;
    font-size: <%= gwidth - 2 %>px;
}

sup {
    font-size: <%= gwidth / 2 %>px;
    line-height: <%= (gheight - 1)/2 %>px;
}

div#hposition {
    position:absolute;
    top:50%;
    left:50%;
    overflow:show;
}

div#vposition {
    position:absolute;
    top:-<%= round(height/2) %>px;
    left:-<%= round(width/2) %>px;
}

div#doublepage {
    position: absolute;
    width: <%= width %>px;
    height: <%= height %>px;
    overflow: hidden;
    background-color: #222222;
}

div#leftpage {
    position: relative;
    width: 48%;
    height: 96%;
    margin-left: 1%;
    margin-right: 1%;
    margin-top: 1.5%;
    margin-bottom: 2%;
    float: left;
    overflow: hidden;
    background-color: white;
}

div#rightpage {
    position: relative;
    width: 48%;
    height: 96%;
    margin-left: 1%;
    margin-right: 1%;
    margin-top: 1.5%;
    margin-bottom: 2%;
    float: right;
    overflow: hidden;
    background-color: white;
}

div#leftview {
    position: relative;
    width: 96%;
    height: <%= grid * ( gheight - 1 ) + 1 %>px;
    margin-left: 2%;
    margin-right: 2%;
    margin-top: 2%;
    margin-bottom: 2%;
    overflow: hidden;
    background-color: lightgray;
}

div#rightview {
    position: relative;
    width: 96%;
    height: <%=  grid * ( gheight - 1 ) + 1 %>px;
    margin-left: 2%;
    margin-right: 2%;
    margin-top: 2%;
    margin-bottom: 2%;
    overflow: hidden;
    background-color: lightgray;
}

div#leftgrid {
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: lightgray;
    line-height: <%= gheight - 2 %>px;
}

div#rightgrid {
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: lightgray;
    line-height: <%= gheight - 2 %>px;
}

div#leftgrid table {
    width: 100%;
    height: 100%;
    border-spacing: 0;
    border-collapse: collapse;
}

div#rightgrid table {
    width: 100%;
    height: 100%;
    border-spacing: 0;
    border-collapse: collapse;
}

div#leftgrid table tbody {
    width: 100%;
    height: 100%;
}

div#rightgrid table tbody {
    width: 100%;
    height: 100%;
}

div#leftgrid table tbody tr {
    width: 100%;
    height: <%= gheight - 3 %>px;
}

div#rightgrid table tbody tr {
    width: 100%;
    height: <%= gheight - 3 %>px;
}

div#leftgrid table tbody tr td {
    width: <%= gwidth %>px;
    height: <%= gheight - 3 %>px;
    border: 1px gray solid;
}

div#rightgrid table tbody tr td {
    width: <%= gwidth %>px;
    height: <%= gheight - 3 %>px;
    border: 1px gray solid;
}

div.content h1 {
    line-height: <%= 2 * (gheight - 1) %>px;
    font-size: <%= 2 * (gwidth - 2) %>px;
    font-weight: bold;
}

div.content h2 {
    line-height: <%= 2 * (gheight - 1) %>px;
    font-size: <%= 1.5 * (gwidth - 2) %>px;
    font-weight: normal;
}

div.content h3 {
    line-height: <%= gheight - 1 %>px;
    font-size: <%= gwidth - 2 %>px;
    font-weight: bold;
}

div.content h4 {
    line-height: <%= gheight - 1 %>px;
    font-size: <%= gwidth - 2 %>px;
    font-weight: normal;
}

div.content h5 {
    line-height: <%= gheight - 1 %>px;
    font-size: <%= gwidth - 2 %>px;
    font-style: italic;
    font-weight: normal;
}

div.content h6 {
    line-height: <%= gheight - 1 %>px;
    font-size: <%= gwidth - 2 %>px;
    font-style: oblique;
    font-weight: normal;
}

div.content p {
    font-size: <%= gwidth - 2 %>px;
    line-height: <%= gheight - 1 %>px;
}

div#cover {
    height: <%=  grid * ( gheight - 1 ) + 1  %>px;
}

div#tocpage {
    height: <%=  grid * ( gheight - 1 ) + 1  %>px;
}

